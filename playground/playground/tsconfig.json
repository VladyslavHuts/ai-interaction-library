{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@ai/components/*": ["../../../ai-interaction-react/src/components/*"],
      "@ai/hooks/*": ["../../../ai-interaction-react/src/hooks/*"],
      "@ai/styles/*": ["../../../ai-interaction-react/src/styles/*"],
      "@ai/utils/*": ["../../../ai-interaction-react/src/utils/*"],
      "@ai/types/*": ["../../../ai-interaction-react/src/types/*"]
    },
    "types": ["node"]
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
